<div class="panel panel-default">
  <div class="panel-heading">Send Location Message</div>
  <form class="form-horizontal panel-body" role="form" method="post" action="/apps/<%= app.id %>/message" rel="message_form">
    <input type="hidden" name="message[type]" value="location" />
    <div class="form-group">
      <label for="message-from-user" class="col-sm-2 control-label">From</label>
      <div class="col-sm-10">
        <select id="message-from-user" class="form-control" name="message[user]"><%= users_select_options(app.users) %></select>
      </div>
    </div>

    <div class="form-group">
      <label for="message-label" class="col-sm-2 control-label">Label</label>
      <div class="col-sm-10">
        <input id="message-label" class="form-control" name="message[label]" placeholder="Location label" />
      </div>
    </div>

    <div class="form-group">
      <label for="message-scale" class="col-sm-2 control-label">Scale</label>
      <div class="col-sm-10">
        <input id="message-scale" class="form-control" name="message[scale]" placeholder="Scale level of map", value="12" />
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Send</button>
      </div>
    </div>

  </form>
</div>